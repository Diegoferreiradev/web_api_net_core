@model IEnumerable<Reservation>

@{
    ViewData["Title"] = "Todas as Reservas";
    Layout = "~/Views/Shared/_reservationLayout.cshtml";
}

<h1>Lista de Reservas</h1>

<a asp-action="AddReservation" class="btn btn-sm btn-primary">Incluir Reserva</a>
<a asp-action="GetReservation" class="btn btn-sm btn-secondary">Obter Reserva</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Locação Inicial</th>
            <th>Locação Final</th>
            <th>Atualizar</th>
            <th>Deletar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
        <tr>
            <td>@item.ReservaId</td>
            <td>@item.Nome</td>
            <td>@item.InicioLocacao</td>
            <td>@item.FimLocacao</td>
            <td><a asp-action="UpdateReservation" asp-route-id="@item.ReservaId"><img src="~/icon/edit.png" /></a></td>
            <td>
                <form asp-action="DeleteReservation" method="post">
                    <input type="hidden" name="ReservationId" value="@item.ReservaId" />
                    <input type="image" src="~/icon/close.png"/>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
